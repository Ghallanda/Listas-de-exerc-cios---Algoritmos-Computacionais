import java.util.Scanner;
public class q4 {
	public static void main (String [] args) {
		Scanner s = new Scanner(System.in);
		int n = s.nextInt();
		fatorial(n);
	}
	static void fatorial (int n) {
		int j = 1;
		System.out.print(n + "! = ");
		for (int i = n; i > 0; n--) {
			i = n;
			System.out.print(i + " x ");
			j *= i;
			i = n - 1;
		}
		System.out.println(" = " + j);
		
	}
}
