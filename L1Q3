import java.util.Scanner;
public class q4 {
	public static void main (String [] args) {
		double num1, num2, num3;
		Scanner scanner = new Scanner (System.in);
		System.out.println("Digite o numero 1:");
		num1 = scanner.nextDouble();
		System.out.println("Digite o numero 2:");
		num2 = scanner.nextDouble();
		System.out.println("Digite o numero 3:");
		num3 = scanner.nextDouble();
		double soma = num2 + num3;
		if (num1 > soma) {
			System.out.println(num1 + " é maior que a soma dos números " + num2 + " e " + num3);
		}
		else if (num1 == soma) {
			System.out.println(num1 + " é igual a soma dos números " + num2 + " e " + num3);
		}
		else {
			System.out.println(num1 + " é menor que a soma dos números " + num2 + " e " + num3);
		}
	}
	
	
}
